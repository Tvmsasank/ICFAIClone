@model ICFAIClone.Models.Enquiry

@{
    ViewData["Title"] = "Home Page";
}


<!DOCTYPE html>
<html>
<head>
    <style>
        html {
            scroll-behavior: smooth;
        }
    </style>
    <style>
        .fade-in {
            opacity: 0;
            transform: translateY(20px);
            transition: opacity 0.6s ease-out, transform 0.6s ease-out;
        }

            .fade-in.visible {
                opacity: 1;
                transform: translateY(0);
            }
    </style>

    <style>
        body {
            margin: auto;
            height: auto;
            background-image: url('https://icfai.org/assets/imgs/campus-building/iu-tripura-bg.jpg');
            background-size: cover;
            background-position: center;
            color: sandybrown;
            display: initial;
            justify-content: center;
            align-items: center;
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="text-lg-end">
        <style>
            h1 {
                font-size: 27px; /* sets heading size to 36 pixels */

            }
        </style>

        <h1><b>Welcome to ICFAI Business School</b></h1>
        <p>Your future begins here</p>

        <div class="enquiry-box">
            <h4>ENQUIRY FORM</h4>
            <form asp-action="SubmitEnquiry" asp-controller="Home" method="post">
                <input type="text" name="Name" placeholder="Your Name" required />
                <input type="email" name="EMAIL" placeholder="Your Email" required />
                <input type="number" name="Phone" placeholder="Your Phone Number" required />
                <textarea name="Address" placeholder="Your Address" rows="4" required></textarea>

                <button type="submit">Submit</button>
                <button type="reset">Reset</button>
            </form>

          @*   @if (TempData["Message"] != null)
            {
                <div class="alert alert-success">
                    @TempData["Message"]
                </div>
            } *@
            
            @if (TempData["Message"] != null)
            {
                <div class="modal fade show d-block" id="messageModal" tabindex="-1" aria-labelledby="messageModalLabel" aria-modal="true" role="dialog">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="messageModalLabel">Notification</h5>
                            </div>
                            <div class="modal-body">
                                @TempData["Message"]
                            </div>
                            <div class="modal-footer">
                                <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Close</a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Backdrop -->
                <div class="modal-backdrop fade show"></div>
            }



            <style>
                .enquiry-box {
                    width: 34%;
                    padding: 20px;
                    background-color: lightblue;
                    border: 1px solid #ccc;
                    border-radius: 10px;
                    box-shadow: 0 0 10px rgba(0,0,0,0.1);
                    font-family: Eras Demi ITC, 'Eras ITC';
                    margin: 20px 0 20px auto;
                }

                    .enquiry-box h4 {
                        margin-bottom: 15px;
                        color: #333;
                        text-align: center;
                    }

                    .enquiry-box input,
                    .enquiry-box textarea {
                        width: 100%;
                        padding: 8px;
                        margin-bottom: 10px;
                        border: 1px solid #aaa;
                        border-radius: 4px;
                    }

                    .enquiry-box button {
                        margin: 7px auto auto;
                        width: 27%;
                        padding: 7px;
                        background-color: #007bff;
                        color: white;
                        border: black;
                        border-radius: 40px;
                        cursor: pointer;
                    }

                        .enquiry-box button:hover {
                            background-color: #0056b3;
                        }
            </style>
        </div>
    </div>
</body>
</html>