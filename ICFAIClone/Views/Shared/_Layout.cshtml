<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ICFAI - @ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApplication2.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-secondary border-bottom border-danger shadow-sm mb-3">
            <div class="container-fluid">
                <a class="navbar-brand text-black"
                   href="https://localhost:7220/"
                   onmouseover="this.classList.replace('text-black','text-danger')"
                   onmouseout="this.classList.replace('text-danger','text-black')">
                    ICFAI Group
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-black"
                               href="https://www.icfaiuniversity.in"
                               onmouseover="this.classList.replace('text-black','text-danger')"
                               onmouseout="this.classList.replace('text-danger','text-black')">
                                Home
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-black"
                               href="https://online.ifheindia.org/privacy-policy.html"
                               target="_blank"
                               onmouseover="this.classList.replace('text-black','text-danger')"
                               onmouseout="this.classList.replace('text-danger','text-black')">
                                Privacy
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-black"
                               href="https://general.ibsindia.org/mba-pgpm/?utm_Source=CDUN&utm_medium=kamp23&utm_campaign=online&msclkid=63ccb062200a15ebc66cd8d8a9a720d6"
                               target="_blank"
                               onmouseover="this.classList.replace('text-black','text-danger')"
                               onmouseout="this.classList.replace('text-danger','text-black')">
                                Register Now
                            </a>
                        </li>

                        <li class="nav-item dropdown">
                            <button class="btn bg-light text-black rounded-pill px-3 py-1 dropdown-toggle"
                                    type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                More
                            </button>
                            <ul class="dropdown-menu p-1 small">
                                <li>
                                    <a class="dropdown-item text-black"
                                       href="https://admissions.ibsindia.org/mocktest/Login.aspx?utm_source=CDUN&utm_medium=kamp23&utm_campaign=online"
                                       target="_blank"
                                       onmouseover="this.classList.replace('text-black','text-danger')"
                                       onmouseout="this.classList.replace('text-danger','text-black')">
                                        Mock Test
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item text-black"
                                       asp-controller="Admin" asp-action="Login"
                                       onmouseover="this.classList.replace('text-black','text-danger')"
                                       onmouseout="this.classList.replace('text-danger','text-black')">
                                        Admin Login
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item text-black"
                                       asp-controller="Student" asp-action="Login"
                                       onmouseover="this.classList.replace('text-black','text-danger')"
                                       onmouseout="this.classList.replace('text-danger','text-black')">
                                        Student Login
                                    </a>
                                </li>
                            </ul>
                        </li>
                    </ul>

                    <div class="nav-item d-flex flex-column">
                        <a class="nav-link text-black"
                           href="https://iutripura.in/about-us"
                           target="_blank"
                           onmouseover="this.classList.replace('text-black','text-danger')"
                           onmouseout="this.classList.replace('text-danger','text-black')">
                            About Us
                        </a>
                    </div>

                    <div class="d-flex align-items-center ms-3">
                        <marquee behavior="scroll" direction="right"
                                 onmouseover="this.stop();" onmouseout="this.start();"
                                 class="text-danger fw-normal fs-5">
                            !!! ICFAI Group !!!
                        </marquee>
                        <img src="~/img/profiles/logo_icfai.jpg" alt="ICFAI Logo" class="ms-2" style="width: 90px; height: auto;" />
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="text-last text-white small font-monospace pt-2">
        <div class="text-white">
            &copy; 2025 - ICFAI Group. All rights reserved
        </div>

        <div class="enquiry-box fade-in">
            <!-- content -->
        </div>

        <script>
            window.addEventListener('scroll', () => {
                document.querySelectorAll('.fade-in').forEach(el => {
                    const rect = el.getBoundingClientRect();
                    if (rect.top < window.innerHeight - 100) {
                        el.classList.add('visible');
                    }
                });
            });
        </script>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
